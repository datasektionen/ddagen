generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Exhibitor {
  id                 String  @id @default(uuid())
  name               String
  organizationNumber String?
  contactPerson      String
  phoneNumber        String

  accounts Account[]

  @@map("exhibitors")
}

model Account {
  id    String @id @default(uuid())
  email String @unique

  exhibitorId String
  exhibitor   Exhibitor @relation(fields: [exhibitorId], references: [id])

  @@map("accounts")
}
